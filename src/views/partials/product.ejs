<div class="product-box">
    <a href="/products/detail/<%= id %>">
        <figure class="product-box_image">
            <img src="/images/products/<%= image || 'default-image.png' %>" alt="imagen de producto">
        </figure>
        <article class="product-box_data">
            <h2>$<%= toThousand((price - (price*discount/100)).toFixed(0)) %>
            </h2> <!-- toFixed(0) es para que no salgan decimales en el numero -->

            <% if (discount) { %>
                <span>
                    <%= discount %> % OFF
                </span>
                <% } %>

                    <p>
                        <%= name %>
                    </p>
                    <i class="fas fa-truck"></i>
        </article>
    </a>
</div>